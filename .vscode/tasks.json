{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-client",
      "type": "npm",
      "script": "build-client:dev",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "stylelint"
    },
    {
      "type": "npm",
      "script": "tslint"
    },
    {
      "type": "npm",
      "script": "eslint",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "label": "npm: eslint",
      "detail": "eslint -c .eslintrc.json --ext .ts src/"
    }
  ]
}
