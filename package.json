{
  "name": "@batch/explorer-root",
  "private": true,
  "version": "1.0.0",
  "description": "Azure Batch Explorer Root",
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/BatchExplorer"
  },
  "author": {
    "name": "Microsoft Corporation",
    "email": "batchexplorer@microsoft.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": {
    "packages": [
      "desktop",
      "packages/*",
      "util/*",
      "web"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@octokit/core": "^3.5.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "markdownlint": "^0.24.0",
    "markdownlint-cli2": "^0.3.0",
    "prettier": "^2.3.2",
    "typescript": "~4.4.2"
  },
  "resolutions": {
    "**/@types/react": "16.9.35",
    "**/@types/react-dom": "16.9.8"
  },
  "scripts": {
    "build": "lerna run workspace:build --stream",
    "build:clean": "lerna run workspace:build:clean --stream",
    "build:desktop": "lerna run workspace:build:desktop --stream",
    "build:desktop:client": "lerna run workspace:build:desktop:client --stream",
    "build:web": "lerna run workspace:build:web --stream",
    "build:package": "lerna run workspace:build:package --stream",
    "build:prod": "lerna run workspace:build:prod --stream",
    "build:test": "lerna run workspace:build:test --stream",
    "clean": "lerna run --parallel workspace:clean --stream",
    "gather-build-results": "butil gather-build-results .",
    "launch": "yarn launch:web",
    "launch:desktop": "lerna run --parallel workspace:launch:desktop --stream",
    "launch:web": "lerna run --parallel workspace:launch:web --stream",
    "lint": "prettier -c . && lerna run --parallel workspace:lint --stream && yarn lint:markdown",
    "lint:fix": "prettier -w . && lerna run --parallel workspace:lint:fix --stream && yarn lint:markdown",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules/**/*\"",
    "start": "yarn start:web",
    "start:desktop": "lerna run --parallel workspace:start:desktop --stream",
    "start:web": "lerna run --parallel workspace:start:web --stream",
    "test": "lerna run workspace:test --stream && yarn gather-build-results",
    "test:desktop": "lerna run workspace:test:desktop --stream && yarn gather-build-results",
    "test:all": "lerna run workspace:test:all --stream && yarn gather-build-results",
    "test:web": "lerna run workspace:test:web --stream && yarn gather-build-results",
    "test:web:all": "lerna run workspace:test:web:all --stream && yarn gather-build-results",
    "postinstall": "cd desktop && yarn rebuild:app-deps"
  }
}
