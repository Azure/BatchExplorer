{
  "name": "@batch/ui-react",
  "private": true,
  "version": "1.0.0",
  "description": "Azure Batch shared React component library",
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/BatchExplorer"
  },
  "author": "Microsoft",
  "license": "MIT",
  "main": "./lib-cjs/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "test": "jest",
  "scripts": {
    "build": "yarn compile",
    "build:clean": "run-s clean compile",
    "build:test": "run-s build test",
    "butil": "butil",
    "compile": "run-p compile:*",
    "compile:esm": "tsc -b ./config/tsconfig.build.json",
    "compile:cjs": "tsc -b ./config/tsconfig.cjs.json",
    "clean": "run-p clean:*",
    "clean:build": "butil rmrf ./build",
    "clean:lib": "butil rmrf ./lib",
    "clean:lib-cjs": "butil rmrf ./lib-cjs",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:all": "cross-env BE_ENABLE_A11Y_TESTING=true yarn test:coverage",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "watch": "yarn compile:esm --watch --preserveWatchOutput",
    "workspace:build": "yarn build",
    "workspace:build:clean": "yarn build:clean",
    "workspace:build:desktop": "yarn build",
    "workspace:build:web": "yarn build",
    "workspace:build:package": "yarn build:clean",
    "workspace:build:prod": "yarn build:clean",
    "workspace:build:test": "yarn build:test",
    "workspace:clean": "yarn clean",
    "workspace:launch:desktop": "yarn watch",
    "workspace:launch:web": "yarn watch",
    "workspace:lint": "yarn lint",
    "workspace:lint:fix": "yarn lint --fix",
    "workspace:start:desktop": "yarn watch",
    "workspace:start:web": "yarn watch",
    "workspace:test": "yarn test",
    "workspace:test:desktop": "yarn test",
    "workspace:test:all": "yarn test:all",
    "workspace:test:web": "yarn test",
    "workspace:test:web:all": "yarn test:all"
  },
  "peerDependencies": {
    "@fluentui/react": ">=7.147.1 <8.0.0",
    "@fluentui/react-theme-provider": ">=0.16.2 <1.0.0",
    "@types/react": ">=16.9.35 <=17.0.0",
    "@types/react-dom": ">=16.9.8 <=17.0.0",
    "@uifabric/azure-themes": ">=7.5.19 <8.0.0",
    "monaco-editor": "^0.25.1",
    "react": ">=16.13.1 <17.0.0",
    "react-dom": ">=16.13.1 <17.0.0"
  },
  "dependencies": {
    "mobx": "^6.3.2",
    "mobx-react-lite": "^3.2.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@batch/build-util": "^1.0.0",
    "@batch/common-config": "^1.0.0",
    "@batch/ui-common": "^1.0.0",
    "@batch/ui-service": "^1.0.0",
    "@fluentui/react": "7.147.1",
    "@fluentui/react-theme-provider": "0.16.2",
    "@testing-library/dom": "^7.30.3",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^6.0.0",
    "@testing-library/user-event": "^12.4.0",
    "@types/jest": "^27.0.1",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^14.14.37",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@uifabric/azure-themes": "7.5.19",
    "jest": "^27.1.0",
    "jest-axe": "^5.0.1",
    "jest-junit": "^12.2.0",
    "npm-run-all": "^4.1.5",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "files": [
    "lib",
    "lib-cjs"
  ]
}
