{
  "name": "@batch/bux",
  "version": "1.0.0",
  "description": "Cross platform CLI containing helpers for NPM tasks",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/BatchExplorer"
  },
  "author": "Microsoft",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "./lib/cli.js",
  "bin": {
    "bux": "./bin/bux"
  },
  "scripts": {
    "build": "tsc -b ./config/tsconfig.build.json && node ./bin/bux chmodx ./bin/bux",
    "bux": "npm run build && node ./bin/bux",
    "clean": "rimraf ./lib && rimraf ./build",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "build:clean": "run-s clean build",
    "prepack": "npm run build:clean",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "workspace:test:all": "npm run build:clean && npm test"
  },
  "dependencies": {
    "cli-color": "^2.0.2",
    "editorconfig": "^0.15.3",
    "glob": "^7.1.6",
    "inquirer": "^8.2.3",
    "js-yaml": "^4.1.0",
    "shelljs": "^0.8.4",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/glob": "^7.1.3",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.29",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.10",
    "jest": "^28.1.0",
    "jest-junit": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.3",
    "which": "^2.0.2"
  },
  "files": [
    "bin",
    "lib"
  ]
}
